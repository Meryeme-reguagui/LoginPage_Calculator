<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_backgroud"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="0dp"
            android:padding="61dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/WelcomeText"
                    android:text="Welcome !"
                    android:layout_gravity="center"
                    android:textSize="48sp"
                    android:layout_marginTop="8dp"
                    android:textColor="#E3D0E6"/>
                <EditText
                    android:id="@+id/login_email"
                    android:layout_width="270dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="60dp"
                    android:background="@drawable/edittext_radius"
                    android:drawableLeft="@drawable/icon_email"
                    android:drawablePadding="8dp"
                    android:hint="Email"
                    android:padding="8dp"/>

                <EditText
                    android:id="@+id/login_password"
                    android:layout_width="270dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/edittext_radius"
                    android:drawableLeft="@drawable/icon_lock"
                    android:drawableRight="@drawable/icon_eye"
                    android:drawablePadding="8dp"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:padding="8dp" />

                <Button
                    android:layout_width="270dp"
                    android:layout_height="70dp"
                    android:text="Login"
                    android:id="@+id/login_button"
                    android:textSize="18sp"
                    android:backgroundTint="#1831BC"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="50dp"
                    app:cornerRadius = "30dp"/>
                <TextView
                    android:id="@+id/signupRedirectText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="14dp"
                    android:padding="8dp"
                    android:text="Not yet registered? Sign up"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

            </LinearLayout>
    </ScrollView>

</LinearLayout>